{
  "env": {
    "browser": true,
    "webextensions": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["no-unsanitized"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "Readability": "readonly",
    "CryptoUtils": "readonly"
  },
  "rules": {
    "no-unsanitized/method": "warn",
    "no-unsanitized/property": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error"
  },
  "ignorePatterns": ["dist/", "node_modules/", "newtab/readability.js"],
  "overrides": [
    {
      "files": ["*.cjs"],
      "env": {
        "node": true
      }
    }
  ]
}
